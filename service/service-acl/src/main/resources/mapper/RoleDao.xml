<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.atguigu.dao.RoleDao">
    <sql id="columns">
        id,role_name,role_code,description,create_time,update_time,is_deleted
    </sql>
    <select id="findAll" resultType="role">
        select 
        <include refid="columns"></include>
        from acl_role
        where is_deleted =0
    </select>

    <insert id="insert" useGeneratedKeys="true" keyProperty="id">
        insert into acl_role (role_name,role_code,description)
        values(#{roleName},#{roleCode},#{description})
    </insert>

    <select id="getById" resultType="role">
        select 
        <include refid="columns"></include>
        from acl_role where id = #{id} and is_deleted = 0
    </select>
    <!--
     update acl_role set
        role_name = #{roleName},role_code =#{roleCode},description = #{description}
        where id = #{id}
     -->
    <update id="update">
         update acl_role
         <set>
             <if test="roleName!=null and roleName !=''">
                 role_Name =#{roleName},
             </if>
             <if test="roleCode!=null and roleCode !=''">
                 role_Code =#{roleCode},
             </if>
             <if test="description!=null and description !=''">
                 description =#{description},
             </if>
             update_time = now()
         </set>
         where id = #{id}
    </update>

    <insert id="delete">
        update acl_role set update_time = now(),is_deleted = 1
        where id = #{id}
    </insert>

    <select id="findPage" resultType="role">
        select
        <include refid="columns"></include>
        from acl_role
        <where>
            <if test="roleName!=null and roleName!=''">
                role_name like "%"#{roleName}"%"
            </if>
            and is_deleted =0
        </where>
    </select>
</mapper>

